<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:id="@+id/remote_activity"
    android:paddingBottom="@dimen/activity_vertical_margin">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Connecting"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/connect_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:id="@+id/currently_playing"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout1">

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/roll_back"
            android:layout_weight="1"
            />
        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/stop_button"
            android:layout_weight="1"
            />
        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/play_pause_button"
            android:layout_weight="1"
            />
        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/roll_forward"
            android:layout_weight="1"
            />
    </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/layout_2"
                android:layout_below="@id/layout1">

                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_height="150dp"
                    android:layout_width="120dp"
                    android:id="@+id/arrow_button_1"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_height="120dp"
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/arrow_button_2"
                    android:longClickable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_height="150dp"
                    android:layout_width="120dp"
                    android:id="@+id/arrow_button_3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"

                    android:layout_height="120dp"
                    android:layout_width="150dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/arrow_button_4"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/select">
                </ImageButton>

            </RelativeLayout>
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/back_button"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="35sp"
                android:paddingBottom="5dp"
                android:layout_marginStart="7dp"
                android:background="#2196f3"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/back_button">
            </Button>
</RelativeLayout>
