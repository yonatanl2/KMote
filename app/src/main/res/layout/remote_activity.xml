<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:gravity="bottom"
    sothree:umanoFadeColor="@android:color/transparent"
    sothree:umanoPanelHeight="20dp"
    sothree:umanoOverlay="true"
    sothree:umanoShadowHeight="0dp"
    android:id="@+id/sliding_up_pane"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout

    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Main2Activity"
    android:id="@+id/remote_activity"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Connecting"
        android:textSize="50sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/connect_message"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textSize="15sp"
        android:id="@+id/currently_playing"/>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout1">

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:elevation="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/roll_back"
            android:layout_weight="1"
            />
        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:elevation="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/stop_button"
            android:layout_weight="1"
            />
        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:elevation="2dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/play_pause_button"
            android:layout_weight="1"
            />
        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:elevation="2dp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="18dp"
            android:layout_marginStart="18dp"
            android:id="@+id/roll_forward"
            android:layout_weight="1"
            />
    </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/layout_2"
                android:layout_below="@id/layout1">

                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:elevation="2dp"
                    android:layout_height="150dp"
                    android:layout_width="120dp"
                    android:id="@+id/arrow_button_1"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"

                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:elevation="2dp"
                    android:layout_height="120dp"
                    android:layout_width="150dp"
                    android:layout_marginTop="10dp"
                    android:id="@+id/arrow_button_2"
                    android:longClickable="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:elevation="2dp"
                    android:layout_height="150dp"
                    android:layout_width="120dp"
                    android:id="@+id/arrow_button_3"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:elevation="2dp"
                    android:layout_height="120dp"
                    android:layout_width="150dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/arrow_button_4"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    >
                </ImageButton>
                <ImageButton
                    style="?android:attr/buttonBarButtonStyle"
                    android:elevation="2dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/select">
                </ImageButton>

            </RelativeLayout>
            <Button
                style="?android:attr/buttonBarButtonStyle"
                android:elevation="2dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:text="@string/back_button"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="35sp"
                android:paddingBottom="5dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="7dp"
                android:background="@drawable/circle_button"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:id="@+id/back_button">
            </Button>

    <ImageButton
        style="?android:attr/buttonBarButtonStyle"
        android:elevation="2dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black"
        android:layout_marginEnd="7dp"
        app:srcCompat="@drawable/ic_home_black_24dp"
        android:background="@drawable/circle_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/home_button">
    </ImageButton>


</RelativeLayout>

    <RelativeLayout
        android:id="@+id/drawed_parent_layout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:id="@+id/drawer_arrow"
            app:srcCompat="@drawable/ic_keyboard_arrow_up_black_24dp"
            android:scaleType="center"
            android:paddingBottom="10dp"
            android:layout_above="@id/player_actions_layout"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="25dp"/>

        <ImageView
            android:id="@+id/drawer_arrow_down"
            app:srcCompat="@drawable/ic_expand_more_black_24dp"
            android:scaleType="center"
            android:layout_above="@id/player_actions_layout"
            android:paddingBottom="10dp"
            android:layout_centerHorizontal="true"
            android:layout_width="60dp"
            android:layout_height="25dp"/>

        <View
            android:layout_below="@id/player_actions_layout"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="19dp"
            android:id="@+id/drawer_separator"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/additional_buttons_layout"
            android:elevation="5dp"
            android:layout_centerHorizontal="true"
            android:background="#E3F2FD"
            android:alpha="0"
            android:layout_below="@id/drawer_separator"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageButton
            style="?android:attr/buttonBarButtonStyle"
            android:elevation="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:textColor="@android:color/black"
            app:srcCompat="@drawable/ic_volume_off_black_24dp"
            android:background="@drawable/circle_button"
            android:id="@+id/mute_button"/>

            <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:elevation="2dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="16dp"
                android:textColor="@android:color/black"
                app:srcCompat="@drawable/ic_volume_up_black_24dp"
                android:background="@drawable/circle_button"
                android:id="@+id/set_volume"/>

            <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:elevation="2dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black"
                app:srcCompat="@drawable/ic_shuffle_black_24dp"
                android:background="@drawable/circle_button"
                android:id="@+id/set_shuffle"/>

            <ImageButton
                style="?android:attr/buttonBarButtonStyle"
                android:elevation="2dp"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/black"
                app:srcCompat="@drawable/ic_repeat_black_24dp"
                android:background="@drawable/circle_button"
                android:id="@+id/set_repeat"/>


        </RelativeLayout>

    </RelativeLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>
